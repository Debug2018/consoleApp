page {
  background-image: linear-gradient(120deg, #84fab0 0%, #8fd3f4 100%);
}

.outer {
  margin-bottom: 100rpx;
}

.row {
  display: flex;
  flex-direction: row;
}

.btn-dd {
  position: relative;
}

.btn-pre {
  display: flex;
  position: absolute;
  right: 50rpx;
  font-size: 24rpx;
  padding: 10rpx;
  background-color: #84fab0;
}

.btn-0 {
  display: flex;
  position: fixed;
  bottom: 0;
  color: #c6ab70;
  width: 50%;
  padding: 18rpx 0;
  justify-content: center;
  background-color: #f3eee1;
  z-index: 99;
}

.btn-1 {
  display: flex;
  padding: 18rpx 0;
  position: fixed;
  bottom: 0;
  left: 50%;
  width: 50%;
  justify-content: center;
  background-color: #c6ab70;
  color: #fff;
  z-index: 99;
}

.s-operator {
  padding: 40rpx;
  background: #fff;
  margin: 20rpx;
  padding-bottom: 90rpx;
}

.s-main-text {
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

.s-row {
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
}

.s-text {
  display: flex;
  width: 80%;
  font-size: 28rpx;
}

.s-num {
  display: flex;
  justify-content: center;
  flex: 1;
  background-color: #f2f2f2;
}

.radio-group {
  display: flex;
  flex-direction: row;
}

.radio-text {
  display: flex;
  font-size: 28rpx;
  width: 63%;
}

.radio {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: row;
  font-size: 28rpx;
}

.b-remark {
  background-color: #f2f2f2;
  padding: 10rpx;
}

.b-text {
  font-size: 28rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.s-remark {
  margin-bottom: 20rpx;
}

.remark {
  font-size: 22rpx;
}

.btn-de {
  display: flex;
  padding: 12rpx;
  width: 120rpx;
  background-color: #8fd3f4;
  font-size: 28rpx;
  color: #fff;
  justify-content: center;
  position: absolute;
  right: 0rpx;
}

/*弹出层*/

.pop {
  position: fixed;
  bottom: 0;
  z-index: 999;
  background-color: #fff;
  width: 100%;
  height: 600rpx;
}

.pop-text {
  display: flex;
  font-size: 28rpx;
  width: 73%;
}
